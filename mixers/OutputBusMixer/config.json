{
    "label": "Efficient Mixer (with signal chains)",
    "class": "OutputBusMixer",
    "options": [
        {
            "src": "masterVolume",
            "label": "Master Volume",
            "type": "number",
            "defaultVal": 1,
            "field": {
                "type": "slider",
                "fieldOptions": {
                    "marks": [
                        {
                            "value": 0.5,
                            "label": "Quieter"
                        },
                        {
                            "value": 2.5,
                            "label": "Louder"
                        }
                    ],
                    "logarithmic": false,
                    "min": 0,
                    "max": 3,
                    "step": 0.05,
                    "scale": 100
                }
            }
        },
        {
            "src": "bypassFx",
            "label": "Bypass FX",
            "type": "number",
            "defaultVal": 0,
            "field": {
                "type": "dropdown",
                "fieldOptions": {
                    "labels": [
                        {
                            "value": 0,
                            "label": "No",
                            "var": 0
                        },
                        {
                            "value": 1,
                            "label": "Yes",
                            "var": 1
                        }
                    ]
                }
            }
        }
    ]
}